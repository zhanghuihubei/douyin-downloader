{
  "manifest_version": 3,
  "name": "抖音关注视频自动下载器",
  "version": "1.0.0",
  "description": "自动下载你关注的所有用户的最新视频，完全本地运行",
  "permissions": [
    "storage",
    "downloads",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "https://www.douyin.com/*",
    "https://*.douyinvod.com/*",
    "https://*.douyinstatic.com/*",
    "https://*.douyincdn.com/*",
    "https://*.bytedance.com/*",
    "https://www-hj.douyin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.douyin.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://www.douyin.com/*"]
    }
  ]
}
